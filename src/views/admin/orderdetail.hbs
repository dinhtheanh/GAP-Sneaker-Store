<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Orders
            /</span>
        Order Details</h4>
    <div class="col-xl">
        <div class="card">

            <div class="card-body">
                <form onsubmit="event.preventDefault();">
                    <div class="mb-3">
                        <label class="form-label" for="id">Order ID</label>
                        <input type="text" class="form-control" id="id" placeholder="" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="userid">User ID</label>
                        <input type="text" class="form-control" id="userid" placeholder="" readonly />
                    </div>
                    <div class="demo-inline-spacing mb-3">
                        <label class="form-label" for="cart">Cart</label>
                        <div class="list-group list-group-flush">
                            <a class="list-group-item list-group-item-action">Bear claw cake biscuit</a>


                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="totalPay">Total Pay</label>
                        <input type="text" class="form-control" id="totalPay" placeholder="" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="shipMethod">Shipping Method</label>
                        <input type="text" id="shipMethod" class="form-control phone-mask" placeholder="" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="status">Status</label>
                        <select class="form-select" id="status">
                            <option value="prepare" selected>
                                Preparing</option>
                            <option value="deli">Delivering</option>
                            <option value="success">Successfully Delivered</option>
                            <option value="delay">Delayed</option>
                            <option value="cancel">Canceled</option>
                        </select>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>