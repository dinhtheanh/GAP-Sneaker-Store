        <div class="featured lazy" data-bg="url({{best.img.[0]}})">
            <div class="opacity-mask d-flex align-items-center" data-opacity-mask="rgba(0, 0, 0, 0.5)">
                <div class="container margin_60">
                    <div class="row justify-content-center justify-content-md-start">
                        <div class="col-lg-6 wow" data-wow-offset="150">
                            <h3>{{best.manufacturer}}<br>{{best.name}}</h3>
                            <p>Lightweight cushioning and durable support with a Phylon midsole</p>
                            <div class="feat_text_block">
                                <div class="price_box">
                                    <span class="new_price">${{calcDiscount     best.price}}</span>
                                    <span class="old_price">${{ best.price}}</span>
                                </div>
                                <a class="btn_1" href="/products/{{best._id}}" role="button">Shop Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /featured -->

