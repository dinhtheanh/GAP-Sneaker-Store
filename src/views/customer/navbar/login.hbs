<link href="/customer/css/account.css" rel="stylesheet" />

<main id="page">
  <div class="bg_gray">

    <div class="container margin_30">
      <div class="page_header">
        <div class="breadcrumbs">
          <ul>
            <li><a href="#">Home</a></li>
            <li><a href="#">Category</a></li>
            <li>Page active</li>
          </ul>
        </div>
        <h1>Sign In Your Account</h1>
      </div>
      <!-- /page_header -->
      <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-6 col-md-8">
          <div class="box_account">
            <h3 class="client">Already Client</h3>
            <div class="form_container">
              <form class="row no-gutters" method="post" action="/log-in">
              <div class="form-group">
                <input
                  type="email"
                  class="form-control"
                  name="email"
                  id="email"
                  placeholder="Email*"
                />
              </div>
              <div class="form-group">
                <input
                  type="password"
                  class="form-control"
                  name="password"
                  id="password_in"
                  value=""
                  placeholder="Password*"
                />
              </div>
              <div class="clearfix add_bottom_15">
                <div class="checkboxes float-start">
                  <label class="container_check">Remember me
                    <input type="checkbox" />
                    <span class="checkmark"></span>
                  </label>
                </div>
                <div class="float-end"><a
                    id="forgot"
                    href="javascript:void(0);"
                  >Lost Password?</a>
                </div>
              </div>
              <div class="text-center"><input
                  type="submit"
                  value="Log In"
                  class="btn_1 full-width"
                /></div>
                 <div class="text-center" ><input
                  type = "button"
                  value="Register an account"
                  class="btn_1 full-width"
                  onclick="window.location.href='sign-up'"
                /></div>
              <div id="forgot_pw">
                <div class="form-group">
                  <input
                    type="email"
                    class="form-control"
                    name="email_forgot"
                    id="email_forgot"
                    placeholder="Type your email"
                  />
                </div>
                <p>A new password will be sent shortly.</p>
                <div class="text-center"><button
                    type="button"
                    class="btn_1"
                    onclick="sendPassword()"
                    id = "reset_password_btn">Send Password</button>

                </div>
                
              </form>
            </div>
            <!-- /form_container -->
          </div>
          <!-- /box_account -->
    
          <!-- /row -->
        </div>

      </div>
      <!-- /row -->
    </div>
    <!-- /container -->
  </div>
  <!--/main-->
</main>

  <!--SCRIPTS -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
 
<script>
  function sendPassword(){
    var userEmail = $("#email_forgot").val();

    // Make an AJAX request to your server
    $.ajax({
      type: "POST", // Use POST or GET based on your server-side implementation
      url: "/reset-password", // Replace with your server endpoint
      data: { email: userEmail },
      success: function (response) {
        // Handle the success response
        alert(response.message);
      },
      error: function (error) {
        // Handle the error response
        alert('Error reseting password: ' + error.responseJSON.error);

      },
    });
  }

  
  </script>
